# See the kdesrc-buildrc-sample for explanations of what the options do, or
# view the manpage or kdesrc-build documentation at
# https://docs.kde.org/trunk5/en/extragear-utils/kdesrc-build/index.html

global
    branch-group kf5-qt5

    # Where to find Qt5
    qtdir /usr/lib64/qt5

    # Where to download source code
    source-dir ~/kde/src

    # Where to build source code
    build-dir ~/kde/build

    # Where to install KF5-based software
    kdedir ~/kde/usr
end global

include ~/.kdesrc-build/kf5-qt5-build-include